<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddGoal">

    <TextView
        android:text="@string/add_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/txtTrophyTitle"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goal_to_add" android:layout_below="@+id/txtTrophyTitle"
            android:layout_alignEnd="@id/goal_to_add" android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal_name"
            android:id="@+id/textView2"
            android:layout_below="@+id/txtTrophyTitle" android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Goal"
            android:id="@+id/btnAddGoal"
            android:layout_marginTop="82dp"
            android:layout_below="@+id/goal_to_add"/>

</RelativeLayout>
